    "dotenv": "^8.2.0",
    "envalid": "^6.0.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "hpp": "^0.2.3",
    "mongoose": "^5.8.9",
    "morgan": "^1.9.1",
    "simple-node-logger": "21.8.12",
    "socket.io": "^4.4.1",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.3",
    "ts-jest": "^27.1.3",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dateformat": "^5.0.0",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/hpp": "^0.2.1",
    "@types/jest": "^27.4.1",
    "@types/mongoose": "^5.5.41",
